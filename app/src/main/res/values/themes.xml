<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PersonalWeather" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_dark</item>
        <item name="colorPrimaryVariant">@color/blue_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/headline_card_view_bg</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/main_bg</item>
        <item name="android:windowLightStatusBar" tools:targetApi="M">true</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.PersonalWeather.Splash" parent="Theme.SplashScreen">
        <!--Color de fondo e icono-->
        <item name="windowSplashScreenBackground">@color/main_bg</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/partly_cloudy_day</item>

        <!--tema definido que se usara en el resto de la app-->
        <item name="postSplashScreenTheme">@style/Theme.PersonalWeather</item>
    </style>
</resources>