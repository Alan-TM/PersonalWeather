<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    style="@style/Widget.Material3.CardView.Elevated"
    app:cardElevation="0dp"
    app:cardCornerRadius="5dp"
    android:layout_marginHorizontal="8dp"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:padding="8dp">


        <TextView
            android:id="@+id/item_day_text_view"
            style="@style/TextAppearance.MaterialComponents.Body2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@color/gray"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Saturday" />

        <TextView
            android:id="@+id/item_temperature_text_view"
            style="@style/TextAppearance.MaterialComponents.Headline6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="@+id/item_day_text_view"
            app:layout_constraintTop_toBottomOf="@id/item_day_text_view"
            tools:text="30Âºc" />

        <ImageView
            android:id="@+id/item_weather_icon_image_view"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="8dp"
            android:contentDescription="@null"
            app:layout_constraintBottom_toBottomOf="@+id/item_temperature_text_view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/item_day_text_view"
            app:layout_constraintTop_toTopOf="@+id/item_day_text_view"
            app:srcCompat="@drawable/clear_day"
            tools:ignore="ImageContrastCheck" />

        <ImageView
            android:id="@+id/item_humidity_image_view"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:contentDescription="@null"
            android:layout_marginVertical="4dp"
            app:layout_constraintEnd_toStartOf="@+id/item_humidity_text_view"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/item_weather_icon_image_view"
            app:srcCompat="@drawable/humidity" />

        <TextView
            android:id="@+id/item_humidity_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/item_humidity_image_view"
            app:layout_constraintEnd_toStartOf="@+id/item_wind_image_view"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/item_humidity_image_view"
            app:layout_constraintTop_toTopOf="@id/item_humidity_image_view"
            tools:text="77%" />

        <ImageView
            android:id="@+id/item_wind_image_view"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:contentDescription="@null"
            app:layout_constraintBottom_toBottomOf="@id/item_humidity_image_view"
            app:layout_constraintEnd_toStartOf="@+id/item_wind_text_view"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/item_humidity_text_view"
            app:layout_constraintTop_toTopOf="@id/item_humidity_image_view"
            app:srcCompat="@drawable/wind" />

        <TextView
            android:id="@+id/item_wind_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/item_wind_image_view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/item_wind_image_view"
            app:layout_constraintTop_toTopOf="@id/item_wind_image_view"
            tools:text="4.5 km/h" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>